<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".mainmenu.MainMenuFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <Button
            android:id="@+id/secureIdVerificationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="55dp"
            android:background="#FFFFFF"
            android:drawableTint="#FFFFFF"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/secure_id_verification"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/fundingSourcesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="55dp"
            android:background="#FFFFFF"
            android:drawableTint="#FFFFFF"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/funding_sources"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/sudosButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="55dp"
            android:background="#FFFFFF"
            android:drawableTint="#FFFFFF"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/sudos"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/orphanCardsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="55dp"
            android:background="#FFFFFF"
            android:drawableTint="#FFFFFF"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/orphan_cards"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>